<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="844.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.blackjack.gui.MainController">
    <Pane maxWidth="1200.0" prefHeight="844.0">
        <children>
            <ImageView fitHeight="844.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true" style="-fx-view-order: 1;">
                <image>
                    <Image url="@../../../../../images/loser_screen.png" />
                </image>
            </ImageView>
            <Button fx:id="restartButton" layoutX="225.0" layoutY="621.0" mnemonicParsing="false" onAction="#startGame" prefHeight="108.0" prefWidth="374.0" style="-fx-background-color: #e43333; -fx-border-radius: 5px; -fx-border-width: 3px; -fx-border-color: #e43333;" text="Restart" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Arial Rounded MT Bold" size="36.0" />
                </font>
                <effect>
                    <DropShadow height="50.0" offsetX="5.0" offsetY="5.0" radius="24.5" width="50.0">
                        <color>
                            <Color opacity="0.550000011920929" />
                        </color>
                    </DropShadow>
                </effect>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button fx:id="leaveGameButton" layoutX="667.0" layoutY="621.0" mnemonicParsing="false" onAction="#leaveGame" prefHeight="110.0" prefWidth="324.0" style="-fx-background-color: transparent; -fx-border-color: #e43333; -fx-border-width: 3px; -fx-border-radius: 5px;" text="Leave Game" textAlignment="CENTER" textFill="#e43333">
                <font>
                    <Font name="Arial Rounded MT Bold" size="36.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <effect>
                    <DropShadow height="50.0" offsetX="5.0" offsetY="5.0" radius="24.5" width="50.0">
                        <color>
                            <Color opacity="0.550000011920929" />
                        </color>
                    </DropShadow>
                </effect>
            </Button>
        </children>
    </Pane>
</VBox>
