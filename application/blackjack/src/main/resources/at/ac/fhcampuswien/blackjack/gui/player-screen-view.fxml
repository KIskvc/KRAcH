               <Font name="Arial" size="36.0" />
            </font>
         </TextArea>
         <TextArea fx:id="player2" layoutX="512.0" layoutY="572.0" nodeOrientation="LEFT_TO_RIGHT" opacity="0.8" prefHeight="80.0" prefWidth="234.0" promptText="Player 2">
            <font>
               <Font name="Arial" size="36.0" />
            </font>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
