<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="844.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.blackjack.gui.MainController">
   <Pane maxWidth="1200.0" prefHeight="844.0">
      <children>
         <ImageView fitHeight="844.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true" style="-fx-view-order: 1;">
            <image>
               <Image url="@../../../../../images/start_screen.png" />
            </image>
         </ImageView>
         <Button fx:id="startButton" layoutX="500.0" layoutY="451.0" mnemonicParsing="false" onAction="#startGame" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #013C1A; -fx-border-radius: 5px; -fx-border-width: 3px; -fx-border-color: #013C1A;" text="START GAME" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="Arial Rounded MT Bold" size="18.0" />
            </font>
            <effect>
               <DropShadow height="50.0" offsetX="5.0" offsetY="5.0" radius="24.5" width="50.0">
                  <color>
                     <Color opacity="0.550000011920929" />
                  </color>
               </DropShadow>
            </effect>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="exitButton" layoutX="500.0" layoutY="542.0" mnemonicParsing="false" onAction="#leaveGame" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: #013C1A; -fx-border-width: 3px; -fx-border-radius: 5px;" text="EXIT" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="Arial Rounded MT Bold" size="18.0" />
            </font>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
               <DropShadow height="50.0" offsetX="5.0" offsetY="5.0" radius="24.5" width="50.0">
                  <color>
                     <Color opacity="0.550000011920929" />
                  </color>
               </DropShadow>
            </effect>
         </Button>
      </children>
   </Pane>
</VBox>
